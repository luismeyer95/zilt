{
  "preset": "ts-jest",
  "rootDir": ".",
  "modulePaths": ["<rootDir>/", "<rootDir>/src"],
  "moduleDirectories": ["node_modules"],
  "clearMocks": true,
  "collectCoverage": true,
  "coverageDirectory": "coverage",
  "coverageReporters": ["json", "html"],
  "coverageProvider": "v8",
  "testEnvironment": "node",
  "testPathIgnorePatterns": ["node_modules", "build"],
  "transform": {
    "\\.(ts|js)$": "ts-jest"
  },
  "verbose": true
}
