{
    "name": "zilt",
    "version": "2.0.2",
    "description": "A lazy iterator library in TypeScript.",
    "main": "build/zilt.umd.min.js",
    "types": "build/zilt.d.ts",
    "files": [
        "build"
    ],
    "scripts": {
        "test": "jest --verbose",
        "lint": "eslint . --ext .ts",
        "build:js": "rollup -c rollup.config.js",
        "build:minjs": "terser build/zilt.umd.js --compress --mangle > build/zilt.umd.min.js",
        "build": "npm run build:js -s && npm run build:minjs -s",
        "clean": "rm -rf coverage build"
    },
    "keywords": [
        "lazy",
        "iterator",
        "collection",
        "iter"
    ],
    "author": "Luis",
    "repository": {
        "type": "git",
        "url": "https://github.com/luismeyer95/zilt"
    },
    "license": "MIT",
    "devDependencies": {
        "@types/jest": "^28.1.1",
        "@types/node": "^17.0.40",
        "@typescript-eslint/eslint-plugin": "^5.27.0",
        "@typescript-eslint/parser": "^5.27.0",
        "eslint": "^8.17.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.0.0",
        "jest": "^28.1.0",
        "jest-junit": "^13.2.0",
        "prettier": "^2.6.2",
        "rollup-plugin-typescript2": "^0.32.1",
        "ts-essentials": "^9.1.2",
        "ts-jest": "^28.0.4",
        "tslib": "^2.4.0",
        "typescript": "^4.7.3"
    }
}
